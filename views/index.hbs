<div class="wrap_container_auth">
    <div class="container_auth">
        <div class="tabs">
            <div id="tab_sign_in">Вход</div>
            <div id="tab_sign_up">регистрация</div>
        </div>
        <div class="container_for_form">

            <div class="SignIn">
                <form method='post' action='/users/login' id="SignInForm">
                    <div>
                        <input type="text" id="login" name="email" placeholder="email">
                    </div>
                    <div>
                        <input type="password" id="password" name="password" placeholder="пароль">
                    </div>

                    <div class="for_btn_flex">
                        <input type="submit" class="btn_submit" value="Войти">
                    </div>

                </form>
            </div>
            <div class="SignUp">
                <div class="successful_sign_up">
                    Регистрация выполнена успешно теперь выполните вход...
                </div>
                <form method="post" action="/users/" id="SignUpForm">
                    <div>
                        <input type="text" name="name" placeholder="Имя" />
                    </div>

                    <div>
                        <input type="text" name="last_name" placeholder="Фамилия" />
                    </div>
                    <div>
                        <select name="group">
                            <option id='group_header'> Группа </option>
                            {{#each this.names_group}}
                            <option value={{this}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    {{!-- <div>
                        <input type="text" placeholder="Група" />
                    </div> --}}

                    <div>
                        <input type="text" name="email" placeholder="email" />
                    </div>

                    <div>
                        <input type="password" name="password" placeholder="пароль" />
                    </div>

                    <div>
                        <input type="password" name="repeat_password" placeholder="повторите пароль" />
                    </div>

                    <div class="for_btn_flex">
                        <input type="submit" class="btn_submit" value="Зарегистрироваться">
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
