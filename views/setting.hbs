{{>nav}}
<link rel='stylesheet' href='/stylesheets/setting.css' />

<div class="container">
  <img src="{{user.photo}}" alt="">
  <form>
    <ul class="flex-outer">
      <li>
        <label for="first-name">Ім'я :</label>
        <input type="text" id="first-name" name="name" value="{{user.name}}"/>
      </li>
      <li>
        <label for="last-name">Фамілія :</label>
        <input type="text" id="last-name" name="last_name" value="{{user.lastname}}"/>
      </li>
      <li>
        <label for="email">Email :</label>
        <input type="email" id="email" name="email" value="{{user.email}}"/>
      </li>
      <li>
        <label for="group">Група :</label>
        <select id="group" name="group" value="{{user.group}}">
            {{#each allgroups}}
              <option value={{this.name}}>{{this.name}}</option>
            {{/each}}
        </select>
      </li>
      <li>
        <label for="password">Старий пароль :</label>
        <input type="password" name="password" id="password" value="{{user.password}}"/>
      </li>
      <li>
        <label for="repeat_password">Новий пароль :</label>
        <input type="password" name="repeat_password" id="repeat_password"/>
      </li>
      <li>
        <label for="repeat_password_again">Новий пароль знову  :</label>
        <input type="password" name="repeat_password_again" id="repeat_password_again"/>
      </li>
      <li>
        <button type="submit">Зберегти</button>
      </li>
    </ul>
  </form>
</div>
 <script src="/javascripts/edit_auth.js"></script>